@model List<MeyawoPortfolio.Models.Tbl_Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hizmetlerim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Görsel</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td> <a href="♯" class="btn btn-outline-success">Güncelle</a></td>
            <td> <a href="♯" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService" class="btn btn-outline-primary col-12">Yeni Hizmet Ekle!</a>