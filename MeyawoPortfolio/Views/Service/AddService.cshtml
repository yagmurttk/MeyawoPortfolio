
@model MeyawoPortfolio.Models.Tbl_Service

@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h4>Yeni Hizmet Girişi</h4>
<br />
@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Hizmet ID")
        @Html.TextBoxFor(x => x.ServiceID, new { @class = "form-control" })
        <br />
        @Html.Label("Hizmet Adı")
        @Html.TextBoxFor(x => x.Title,new { @class = "form-control" })
        <br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Description, 10, 7, new { @class = "form-control" })
        <br />
        @Html.Label("Image Url")
        @Html.TextAreaFor(x => x.ImageUrl, 10, 7, new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-primary col-md-12">Hizmet Ekle</button>
    </div>
}


