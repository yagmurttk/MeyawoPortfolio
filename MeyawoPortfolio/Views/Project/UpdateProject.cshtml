@model MeyawoPortfolio.Models.Tbl_Project

@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h4>Yeni Proje Güncelleme Sayfası</h4>
<br />
@using (Html.BeginForm("UpdateProject", "Project", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.ProjectID, new { @class = "table table-bordered" })
    <br />
    @Html.Label("Proje Adı")
    @Html.TextBoxFor(x => x.Title, new { @class = "table table-bordered" })

    @Html.Label("Image Url")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
    <br />
    @Html.Label("Project Url")
    @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "table table-bordered" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.DropDownListFor(x => x.ProjectCategory, (SelectList)ViewBag.categories, new { @class = "table table-bordered" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, 5, 7, new { @class = "table table-bordered" })
    <br />
    <button type="submit" class="btn btn-outline-primary col-md-12">Güncelle</button>
</div>
}
