@model List<MeyawoPortfolio.Models.Tbl_Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h4>Proje Listesi</h4>
<br />
<table class="table table-bordered">
    <tr>
        <th>Proje ID</th>
        <th>Proje Başlığı</th>
        <th>Proje Kategorisi</th>
        <th>Github Linki</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectID</td>
            <td>@item.Title</td>
            <td>@item.Tbl_Category.CategoryName</td>
            <td> <a href="@item.ProjectUrl" class="btn btn-outline-dark">Github</a></td>
            <td> <a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-outline-success">Güncelle</a></td>
            <td> <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Project/AddProject/" class="btn btn-outline-primary col-12">Yeni Proje Ekle!</a>
